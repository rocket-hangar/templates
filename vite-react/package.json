{
  "name": "vite-template",
  "version": "1.0.0",
  "scripts": {
    "app:dev": "vite",
    "app:browser": "cross-env PORT=3000 zx scripts/start.mjs",
    "start": "multiplerun dev",
    "build": "tsc --noEmit && vite build",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "precommit": "lint-staged"
  },
  "multiplerun": {
    "dev": [
      [
        "yarn run tsc --watch --noEmit",
        "yarn run test"
      ],
      [
        "yarn run app:dev",
        {
          "command": "yarn run app:browser",
          "wait": "5000"
        }
      ]
    ]
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true vitest related"
    ]
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^6.5.0-beta.8",
    "@storybook/addon-links": "^6.5.0-beta.8",
    "@storybook/addon-storysource": "^6.5.0-beta.8",
    "@storybook/builder-vite": "^0.1.33",
    "@storybook/react": "^6.5.0-beta.8",
    "@types/node": "^17.0.34",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "cross-env": "^7.0.3",
    "lint-staged": "^12.4.1",
    "multiplerun": "^2.0.1",
    "playwright": "^1.22.1",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-svgr": "^2.1.0",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.12.6",
    "zx": "^6.1.0"
  }
}
